{% extends 'base.html.twig' %}

{% block title %}Mes réservations{{ parent() }}{% endblock %}

{% block body %}
    <main class="profil">
        <h1>Mes réservations</h1>

        <div class="conteneur">
            <section class="navigation">
                <nav>
                    <ul>
                        <li><a href="{{ path('app_profil') }}">Mes informations</a></li>
                        <li><a href="{{ path('app_profil_trajets') }}">Mes trajets</a></li>
                        <li><a href="{{ path('app_profil_reservations') }}" class="actif">Mes réservations</a></li>
                        <li><a href="{{ path('app_logout') }}" class="deconnexion">Se déconnecter</a></li>
                    </ul>
                </nav>
            </section>

            <section class="informations">
                {% if reservations is not empty %}
                    <div class="grid">
                        {% for reservation in reservations %}
                            <div class="trajet">
                                <div class="statut">
                                    {% if reservation.trajet.dateEtHeure > date() %}
                                        <p class="a-venir">À venir</p>
                                    {% else %}
                                        <p class="effectue">Effectué</p>
                                    {% endif %}
                                </div>

                                <div class="icone">
                                    <img src="{{ asset('images/parcours.svg') }}" alt="Icône d'un parcours">

                                    <div>
                                        <p>{{ reservation.trajet.pointDeDepart }}</p>
                                        <p>{{ reservation.trajet.destination }}</p>
                                    </div>
                                </div>

                                <div class="icone">
                                    <img src="{{ asset('images/volant.svg') }}" alt="Icône d'un conducteur">
                                    
                                    <p>{{ reservation.trajet.utilisateur.prenom }} {{ reservation.trajet.utilisateur.nomDeFamille }}</p>
                                </div>

                                <div class="icone">
                                    <img src="{{ asset('images/date-et-heure.svg') }}" alt="Icône d'un calendrier">

                                    <p>{{ reservation.trajet.dateEtHeure|date('d/m/Y à H:i') }}</p>
                                </div>

                                <div class="icone">
                                    <img src="{{ asset('images/sieges-libres.svg') }}" alt="Icône d'un passager">
                                    
                                    {% if reservation.siegesReserves > 1 %}
                                        <p>{{ reservation.siegesReserves }} sièges réservés</p>
                                    {% else %}
                                        <p>{{ reservation.siegesReserves }} siège réservé</p>
                                    {% endif %}
                                </div>

                                {% if reservation.trajet.dateEtHeure > date() %}
                                    <div class="modifier">
                                        <a href="{{ path('app_profil_reservation_modifier', {'id': reservation.id}) }}">
                                            <button class="white">Modifier</button>
                                        </a>

                                        <a href="{{ path('app_profil_reservation_supprimer', {'id': reservation.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?')">
                                            <button class="white">Supprimer</button>
                                        </a>
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="vide">Vous n'avez effectué aucune réservation pour le moment.</p>
                {% endif %}
            </section>
        </div>
    </main>
{% endblock %}
