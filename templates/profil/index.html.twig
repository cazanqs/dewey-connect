{% extends 'base.html.twig' %}

{% block title %}Mon profil{{ parent() }}{% endblock %}

{% block body %}
    <main class="profil">
        <h1>Mes informations</h1>

        <div class="conteneur">
            <section class="navigation">
                <nav>
                    <ul>
                        <li><a href="{{ path('app_profil') }}">Mes informations</a></li>
                        <li><a href="{{ path('app_profil_trajets') }}">Mes trajets</a></li>
                        <li><a href="{{ path('app_profil_reservations') }}">Mes réservations</a></li>
                        <li><a href="{{ path('app_logout') }}" class="deconnexion">Se déconnecter</a></li>
                    </ul>
                </nav>
            </section>

            <section class="informations">
                <div class="centre">
                    <p><strong>Adresse email :</strong> {{ utilisateur.email }}</p>
                    <p><strong>Prénom :</strong> {{ utilisateur.prenom }}</p>
                    <p><strong>Nom de famille :</strong> {{ utilisateur.nomDeFamille }}</p>

                    {% if utilisateur.telephone %}
                        <p><strong>Numéro de téléphone :</strong> {{ utilisateur.telephone }}</p>
                    {% endif %}
                </div>

                <div class="modifier">
                    <a href="{{ path('app_profil_modifier') }}">Modifier mes informations</a>
                    <a href="{{ path('app_profil_modifier') }}">Modifier mon mot de passe</a>
                </div>
            </section>
        </div>
    </main>
{% endblock %}
